<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Home">

    <android.support.v7.widget.CardView
        android:id="@+id/fairbutton"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/purpleimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/purplecircle"
                app:srcCompat="@drawable/ic_action_fair" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/purpleimage"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Fair and Route"
                android:textColor="#FF383838"
                android:textStyle="bold" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="32dp"
                android:background="@color/darkgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:gravity="center"
                android:text="Check your fair and route"
                android:textColor="#FF383838"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/mapbutton"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/yelloimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/yellocircle"
                app:srcCompat="@drawable/ic_action_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yelloimage"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Map"
                android:textColor="#FF383838"
                android:textStyle="bold" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="32dp"
                android:background="@color/darkgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="View your route on map"
                android:textColor="#FF383838"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/contactbutton"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blueimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/bluecircle"
                app:srcCompat="@drawable/ic_action_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blueimage"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Contact Us"
                android:textColor="#FF383838"
                android:textStyle="bold" />

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="32dp"
                android:background="@color/darkgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="Send your Feedback!"
                android:textColor="#FF383838"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardbutton"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="200dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pinkimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/pinkcircle"
                app:srcCompat="@drawable/ic_action_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pinkimage"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Smart Card"
                android:textColor="#FF383838"
                android:textStyle="bold" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="32dp"
                android:background="@color/darkgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:gravity="center"
                android:text="Recharge your smart card"
                android:textColor="#FF383838"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/lostandfoundbutton"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="373dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/greenimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/greencircle"
                app:srcCompat="@drawable/ic_action_lost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/greenimage"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Lost and Found"
                android:textColor="#FF383838"
                android:textStyle="bold" />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="32dp"
                android:background="@color/darkgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:gravity="center"
                android:text="Search for lost goods"
                android:textColor="#FF383838"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/donatebutton"
        android:layout_width="130dp"
        android:layout_height="157dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginTop="373dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/orangeimage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/orangecircle"
                app:srcCompat="@drawable/ic_action_love" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orangeimage"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Donate"
                android:textColor="#FF383838"
                android:textStyle="bold" />

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="32dp"
                android:background="@color/darkgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="Support us!"
                android:textColor="#FF383838"
                android:textSize="12dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>